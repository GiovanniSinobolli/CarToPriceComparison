<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="430" prefWidth="600" style="-fx-background-color: #A7C1A8; -fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pricetohpGraph.TableController">

    <TableView fx:id="tableView" layoutX="10" layoutY="10" prefHeight="380" prefWidth="580" style="-fx-font-family: 'Lucida Sans Unicode'; -fx-font-size: 12; -fx-background-color: #FCEF91; -fx-border-color: #A7C1A8; -fx-border-radius: 5;">
        <columns>
            <TableColumn fx:id="colId" prefWidth="41.0" style="-fx-alignment: CENTER;" text="ID" />
            <TableColumn fx:id="colBrand" prefWidth="293.0" style="-fx-alignment: CENTER;" text="Brand" />
            <TableColumn fx:id="colPrice" prefWidth="147.0" style="-fx-alignment: CENTER;" text="Price" />
            <TableColumn fx:id="colHP" minWidth="0.0" prefWidth="97.0" style="-fx-alignment: CENTER;" text="Horsepower" />
        </columns>
    </TableView>

    <Button fx:id="closeButton" text="Close" layoutX="260" layoutY="400" prefWidth="80" onAction="#onCloseClicked" style="-fx-background-color: #F5F0CD; -fx-background-radius: 5; -fx-font-family: 'Lucida Sans Unicode'; -fx-font-size: 12;"/>

</AnchorPane>
